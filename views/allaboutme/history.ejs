                  <form action="/history/delete/<%= history._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Êú¨ÂΩì„Å´ÂâäÈô§„Åó„Åæ„Åô„ÅãÔºü');">
