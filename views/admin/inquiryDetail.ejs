<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <h1>お問い合わせ詳細</h1>
  <div class="mb-3">
    <strong>タイトル:</strong> <%= inquiry.title %><br>
    <strong>ユーザー:</strong> <%= inquiry.user ? (inquiry.user.displayname || inquiry.user.username) : '匿名' %><br>
    <strong>ステータス:</strong> <%= inquiry.status %><br>
    <strong>作成日:</strong> <%= inquiry.entry_date ? new Date(inquiry.entry_date).toLocaleString('ja-JP') : '' %>
  </div>

  <div class="accordion" id="inquiryAccordion">
    <% inquiry.messages.forEach((msg, idx) => { %>
      <div class="accordion-item">
        <h2 class="accordion-header" id="heading<%= idx %>">
          <button class="accordion-button <%= idx>0 ? 'collapsed' : '' %>" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= idx %>">
            <%= new Date(msg.entry_date).toLocaleString('ja-JP') %> - <%= msg.isAdmin ? '管理者' : 'ユーザー' %>
          </button>
        </h2>
        <div id="collapse<%= idx %>" class="accordion-collapse collapse <%= idx===0 ? 'show' : '' %>" data-bs-parent="#inquiryAccordion">
          <div class="accordion-body">
            <p style="white-space: pre-wrap;"><%= msg.content %></p>
            <p><small>メール配送: <%= msg.mail_delivery ? 'ON' : 'OFF' %>, 配送済み: <%= msg.mail_sent ? 'はい' : 'いいえ' %></small></p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <form action="/admin/inquiries/<%= inquiry._id %>/reply" method="POST" class="mt-4">
    <div class="mb-3">
      <label for="replyContent" class="form-label">返信内容</label>
      <textarea name="replyContent" id="replyContent" class="form-control" rows="4" required></textarea>
    </div>
    <div class="form-check mb-3">
      <input class="form-check-input" type="checkbox" name="mail_delivery" id="mailDelivery" checked>
      <label class="form-check-label" for="mailDelivery">メール配送する</label>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="closed" id="inquiryClosed" <%= inquiry.closed ? 'checked' : '' %>>
    <label class="form-check-label" for="inquiryClosed">このお問い合わせを完了にする</label>
    </div>
    <button type="submit" class="btn btn-success">送信</button>
    <a href="/admin/inquiries" class="btn btn-secondary ms-2">一覧に戻る</a>
  </form>
</div>
